# Django Settings
# WHY: DJANGO_ENV controls which settings file is loaded (development/staging/production)
DJANGO_ENV=development

# WHY: SECRET_KEY is used for cryptographic signing - MUST be unique and secret in production
SECRET_KEY=generate-secret-key-and-use-here-change-in-production

# WHY: DEBUG shows detailed error pages - MUST be False in production for security
DEBUG=True

# WHY: ALLOWED_HOSTS prevents HTTP Host header attacks - set to your domain in production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# WHY: PostgreSQL chosen for ACID compliance, JSON support, and excellent indexing
DB_NAME=stockwatchlist
DB_USER=postgres
DB_PASSWORD=postgres
# WHY: DB_HOST is 'db' for Docker, 'localhost' for local development
DB_HOST=db
DB_PORT=5432

# Redis Configuration
# WHY: Redis provides fast caching (latest prices) and message queue (Celery broker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
# WHY: Celery runs background tasks (price fetching, alerts) without blocking API requests
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Alpha Vantage API
# WHY: Free API for real-time stock price data (5 calls/min, 500/day limit)
# Get free key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=demo

# Email Configuration
# WHY: Console backend for dev (prints to terminal), SMTP for production (sends real emails)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# WHY: Gmail SMTP for easy setup - use SendGrid/AWS SES for production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
# WHY: App password (not account password) for security - enable 2FA on Gmail first
EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings
# WHY: Controls which frontend domains can access the API (prevents unauthorized access)
# Set to your React/Vue/Angular app URL
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings
# WHY: These should be True in production to enforce HTTPS
# Set False for local development (no SSL certificate needed)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
